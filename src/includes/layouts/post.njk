{% include "partials/head.njk" %}
{% include "partials/header.njk" %}
<section class="single-post pt-xlarge pb-large" data-scroll-section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-12 pb-small">
                <div class="single-post-image-wrap">
                    <img src="{{ thumbnail | url }}" alt="{{ title }}" class="single-post-image img-fluid">
                    <div class="single-post-title-wrap">
                        <div class="breacrumbs">
                            <a href="/">
                                Główna
                            </a>
                            <span>
                                |
                            </span>
                            <a href="/blog">
                                Blog
                            </a>
                            <span>
                                |
                            </span>
                            <span>
                                {{ title }}
                            </span>
                        </div>
                        <h1 class="single-post-title mt-4 mb-4">
                            {{ title }}
                        </h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center pb-medium">
            <div class="col-md-8 col-xl-6">
                {{ content | safe }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xl-9">
                <div class="post-navigation pt-xsmall pb-medium px-md-5 bg-light-3">
                    {%- if collections.posts %}
                        {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
                        {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
                        {%- if nextPost or previousPost %}
                            <ul class="d-flex flex-wrap">
                                {%- if previousPost %}
                                    <li class="col-md-6 prev d-none d-md-block">
                                        <p>
                                            <small>
                                                Poprzedni:
                                            </small>
                                        </p>
                                        <a href="{{ previousPost.url | url }}" title="{{ previousPost.data.title }}" class="h4">{{ previousPost.data.title }}</a>
                                    </li>
                                {% endif %}
                                {%- if nextPost %}
                                    <li class="col-md-6 next">
                                        <p>
                                            <small>
                                                Kolejny:
                                            </small>
                                        </p>
                                        <a href="{{ nextPost.url | url }}" title="{{ previousPost.data.title }}" class="h4">{{ nextPost.data.title }}</a>
                                    </li>
                                {% endif %}
                            </ul>
                        {%- endif %}
                    {%- endif %}
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xl-6">
                <ul class="single-post-tag-list mt-5">
                    {% for tag in tags %}
                        <li class="single-post-tag-list-item">
                            <a href="/blog/{{ tag | slugify }}">{{ tag }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>
{% include "partials/footer.njk" %}
{% include "partials/foot.njk" %}