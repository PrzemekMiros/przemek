---
pagination: 
    data: collections
    size: 1
    alias: tag
    addAllPagesToCollections: true
layout: layouts/blog.njk
permalink: /blog/{{tag | slugify}}/
eleventyComputed:
  title: Wpisy oznaczone tagiem {{tag}}
---

<h1 class="big-text mt-5">
    {{tag}}
    <span class="xxl text-stroke d-none d-md-inline"> Otagowane</span>
</h1>

<ul class="row pt-small">
    {% for post in collections[tag] %}
        <li class="col-md-4">
            <a href="{{ post.url }}">
            <div class="post-thumb">
                <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" loading="lazy"/>
            </div>
            <p class="mt-3 mb-1"> 
                <small>{{ post.data.date | dateDisplay }}</small>
            </p>
            
            <h2 class="h5 mt-0 mb-5">
                {{ post.data.title }}
            </h2>
        </a>
        </li>
    {% endfor %}
</ul>